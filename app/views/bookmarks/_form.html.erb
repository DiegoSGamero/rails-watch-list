<%= simple_form_for([@list, @bookmark]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :movie %>
    <%= f.input :comment %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Create", class: "btn-show-new" %>
  </div>
<% end %>

